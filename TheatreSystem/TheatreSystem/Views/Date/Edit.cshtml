@model TheatreSystem.Models.Date

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Date</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.PlayId, "Play")
        </div>
        <div class="editor-field">
            @Html.DropDownList("PlayId", String.Empty)
            @Html.ValidationMessageFor(model => model.PlayId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.DatePlay)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.DatePlay)
            @Html.ValidationMessageFor(model => model.DatePlay)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
