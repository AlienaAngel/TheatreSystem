@model TheatreSystem.Models.Play

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Подробнее</h2>

<div>
    <h4>Пьеса</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            <b>Название</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
           <b>Дата</b>
        </dt>

        <dd>
            
            @Model.DatePlay.ToString("dd.MM.yyyy")
        </dd>

        <dt>
            <b>Информация</b>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Info)
        </dd>

    </dl>
</div>
<p>
    @if (ViewBag.IsModerator)
    {
        @Html.ActionLink("Редактировать", "Edit", new { id = Model.Id })<span> | </span>
    }
    @Html.ActionLink("Назад к списку", "Index")
</p>
