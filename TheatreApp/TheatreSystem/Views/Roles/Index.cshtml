@model IEnumerable<TheatreSystem.Models.Role>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Роли</h2>

<table class="table">
    <tr>
        <th>
            <b>Роль</b>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id })
        </td>
    </tr>
}

</table>
