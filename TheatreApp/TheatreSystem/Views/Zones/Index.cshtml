@model IEnumerable<TheatreSystem.Models.Zone>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Зоны</h2>

<p>
    @if (ViewBag.IsModerator)
    {
        @Html.ActionLink("Добавить зону", "Create")
    }
</p>
<table class="table table-border">
    <tr>
        <th>
            <b>Стоимость билета</b>
        </th>
        <th>
            <b>Название</b>
        </th>
        <th>
            <b>Количество мест</b>
        </th>
        <th> </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cost)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AmountPlaces)
        </td>
        <td>
            @if (ViewBag.IsAdmin)
            {
                @Html.ActionLink("Редактировать", "Edit", new { id = item.Id })<span> | </span>
                @Html.ActionLink("Удалить", "Delete", new { id = item.Id })<span> | </span>
            }       
            @Html.ActionLink("Подробнее", "Details", new { id=item.Id })
           
        </td>
    </tr>
}

</table>
